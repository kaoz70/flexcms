{
  "extends": [
    "airbnb",
    "plugin:angular/johnpapa"
  ],
  "globals": {
    "angular": true,
    "Ps": true
  },
  "env": {
    "browser": true
  },
  "rules": {
    // indentation
    "indent": [ 2, 4 ],
    "no-param-reassign": "warn",
    "no-plusplus": [2, { "allowForLoopAfterthoughts": true }]
  }
}